<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey</item>
    </style>

    <style name="settings_trans" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/light_grey</item>
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="settings" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/light_grey</item>
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:textColorPrimary">@color/trans</item>
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="numberPicker" parent="AppTheme">
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="marginFrame" parent="AppTheme">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

</resources>
